@{
    EvernoteUser user = null;
    if (HttpContext.Current.Cache["Kullanici"]!=null)
    {
        user = HttpContext.Current.Cache["Kullanici"] as EvernoteUser;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <!-- Navigation -->
<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
               
            </button>
            <a class="navbar-brand" href="/Home/Index">My Evernote</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                @if (user != null)
                {
                    <li>
                        <a href="#">
                            <span class="glyphicon glyphicon-wrench"></span>
                            Yönetim
                        </a>
                    </li>
                }
               
                <li>
                    <a href="/Home/MostLiked">
                        <span class="glyphicon glyphicon-thumbs-up"></span>
                        En Çok Beğenilenler
                    </a>
                </li>
                <li>
                    <a href="/Home/Index">
                        <span class="glyphicon glyphicon-th-list"></span>
                        Son Yazılanlar
                    </a>
                </li>
                <li>
                    <a href="/Home/About">
                        <span class="glyphicon glyphicon-info-sign"></span>
                        Hakkımızda
                    </a>
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (user == null)
                {
                    <li>
                        <a href="/Home/Login">
                            <span class="glyphicon glyphicon-log-in"></span>
                            Giriş
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Register">
                            <span class="glyphicon glyphicon-user"></span>
                            Üye Ol
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Home/ShowProfile">
                            <span class="glyphicon glyphicon-user"></span>
                            Hoş Geldiniz: @user.Username
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Logout">
                            <span class="glyphicon glyphicon-log-out"></span>
                            Çıkış
                        </a>
                    </li>
                }
                
                
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>
    @RenderBody()
   
<div class="container">

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-4 text-center">
                <h4>
                    <strong>Site Haritası</strong>
                </h4>
                <hr/>
                <p>
                    <a href="#">
                        <span class="glyphicon glyphicon-info-sign"></span>
                        Hakkımzıda
                    </a>
                    <br/><br/>
                    <a href="#">
                        <span class="glyphicon glyphicon-star"></span>
                        En  Beğenilenler
                    </a><br/><br />
                    <a href="#">
                        <span class="glyphicon glyphicon-th-list"></span>
                        Son Yazılar
                    </a>
                 
                </p>
            </div>
            <div class="col-lg-4 text-center">
                <h4>
                    <strong>My Evernote</strong>
                </h4>
                <hr/>
                <p>Copyright &copy;My Evernote @DateTime.Now.Year</p>
            </div>
            <div class="col-lg-4 text-center">
                <h4>
                    <strong>E-Bülten Üyeliği</strong>
                </h4>
                <hr />
                <div class="col-md-10 col-md-offset-1">
                    <div class="input-group">
                        <input type="text" name="name" class="form-control" value="" placeholder="E-Posta Adresiniz" />
                        <span class="input-group-btn">
                            
                            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-send"></span>  Gönder</button>
                        </span>
                        
                    </div>
                </div>
               
            </div>
        </div>
    </footer>

</div>
<!-- /.container -->



</body>
</html>
